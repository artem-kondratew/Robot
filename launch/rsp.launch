<launch>
  <!-- Allow sim time to be passed as an argument -->
  <arg name="use_sim_time" default="true" doc="Use simulation time"/>

  <!-- Process the xacro file and generate the URDF -->
  <param name="robot_description" command="$(find xacro)/xacro $(find robot)/description/robot.urdf.xacro" />

  <!-- Launch the robot_state_publisher node -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen">
    <param name="use_sim_time" value="$(arg use_sim_time)" />
  </node>
</launch>
